<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Notenmanager.Notenmanager"
             Title="Notenmanager">
    <ScrollView>
        <VerticalStackLayout x:Name="mainLayout" Padding="5">
            <BoxView HeightRequest="10" Color="Transparent" />

            <Label 
                Text="Fächer"
                FontSize="32"
                HorizontalOptions="Center"
                FontAttributes="Bold"
                Padding="10"/>

            <Button
                ImageSource="icon_add.svg"
                x:Name="AddSubjectButton"
                Text="Fach hinzufügen"
                Clicked="OnAddSubjectClicked"
                HorizontalOptions="Center"
                WidthRequest="300"/>

            <Button
                x:Name="BackToYear"
                Text="Zurück zu Semester"
                Clicked="OnBackToYear"
                HorizontalOptions="Center" 
                WidthRequest="300"
                BackgroundColor="White"
                BorderColor="#4630D9"
                BorderWidth="3"
                TextColor="#4630D9"
                Margin="5"
                />
            



        </VerticalStackLayout>
    </ScrollView>
</ContentPage>
